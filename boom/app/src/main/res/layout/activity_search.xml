<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout tools:context=".SearchActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent">
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/search"
            android:shadowColor="@color/colorPrimaryDark"
            android:padding="@dimen/list_item_spacing"
            android:allowUndo="true"
            android:inputType="text"
            android:backgroundTint="#C00101"/>
        <ListView android:layout_height="wrap_content"
            android:padding="@dimen/list_item_spacing"
            android:layout_below="@id/search"
            android:layout_width="fill_parent"
            android:id="@+id/ListView01"
            android:visibility="invisible"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>