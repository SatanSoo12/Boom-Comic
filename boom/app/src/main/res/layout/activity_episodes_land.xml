<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EpisodesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/eToolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/toolbar" />
        <FrameLayout
            android:layout_below="@+id/eToolbar"
            android:id="@+id/episodes_fragment"
            android:layout_gravity="top"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <FrameLayout
            android:layout_below="@+id/eToolbar"
            android:layout_toRightOf="@id/episodes_fragment"
            android:layout_toEndOf="@id/episodes_fragment"
            android:id="@+id/slides_fragment"
            android:layout_gravity="top"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>